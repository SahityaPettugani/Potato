<!-- app/views/movies/index.html.erb -->
<h1>All Movies</h1>

<%= form_tag movies_path, method: :get, id: 'ratings_form' do %>
  Include:
  <% @all_ratings.each do |rating| %>
    <div class="form-check form-check-inline">
      <%= label_tag "ratings[#{rating}]", rating, class: 'form-check-label' %>
      <%= check_box_tag "ratings[#{rating}]", "1", @ratings_to_show_hash.include?(rating), class: 'form-check-input', id: "ratings_#{rating}" %>
    </div>
  <% end %>
  <%= submit_tag 'Refresh', id: 'ratings_submit', class: 'btn btn-primary' %>
<% end %>

<table class="table table-striped table-hover" id="movies">
  <thead>
    <tr>
      <th>
        <%= link_to 'Movie Title', movies_path(sort: 'title', ratings: @ratings_to_show_hash), id: 'title_header', class: @title_class %>
      </th>
      <th>
        <%= link_to 'Release Date', movies_path(sort: 'release_date', ratings: @ratings_to_show_hash), id: 'release_date_header', class: @release_date_class %>
      </th>
      <th>Rating</th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.release_date %></td>
        <td><%= movie.rating %></td>
        <td><%= link_to 'More about', movie_path(movie) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
